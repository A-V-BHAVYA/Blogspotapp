<?xml version="1.0" encoding="UTF-8"?>

    <androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_margin="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">


    <LinearLayout android:id="@+id/myll" android:layout_margin="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

    <ImageView android:id="@+id/imageview" android:layout_width="match_parent" android:layout_height="250dp" android:scaleType="centerCrop" />

    <TextView android:layout_margin="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/post_title_txtview" android:text="Post Title" android:textStyle="bold" android:textColor="#000"/>

    <TextView android:layout_margin="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/post_desc_txtview" android:text="Post Description"/>

    <TextView android:layout_margin="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/post_user" android:text="Name" android:textStyle="bold" android:textColor="#FF07B618" android:gravity="end" android:fontFamily="serif" android:textSize="15sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
